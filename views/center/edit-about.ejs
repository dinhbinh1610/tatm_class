					<br>
					<div class="submit-edit">
						<button class="button button-cancel">Hủy bỏ</button>
						<button class="button button-dashed">Cập nhập</button>
					</div>
					<br>
					<br>
				</div>
			</div>

			<div class="clear"></div>
			<!-- button update -->
			
		</div>
	</div>
			

	<%- include("footer"); %>		
